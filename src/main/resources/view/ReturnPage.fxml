<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReturnPageController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="60.0" prefWidth="960.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 5;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Book Returns" textFill="#3e2723">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
            <padding><Insets left="20.0" right="20.0" /></padding>
            <effect><DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" /></effect>
        </HBox>

        <HBox layoutX="20.0" layoutY="100.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
            <children>
                <VBox prefHeight="530.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8;">
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                    <effect><DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" /></effect>
                    <children>
                        <Label text="Return Processing" textFill="#5d4037"><font><Font name="System Bold" size="16.0" /></font></Label>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Rent ID" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <TextField fx:id="txtRentId" promptText="Enter Rent ID to Find" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Book ID" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <TextField fx:id="txtBookId" editable="false" style="-fx-background-color: #EEE;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Return Date" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <DatePicker fx:id="dpReturnDate" maxWidth="Infinity" style="-fx-border-color: #d7ccc8;"/>
                            </children>
                        </VBox>

                        <HBox spacing="10.0">
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label text="Late Days" textFill="#d32f2f"><font><Font name="System Bold" size="11.0" /></font></Label>
                                    <TextField fx:id="txtLateDays" editable="false" text="0" style="-fx-background-color: #FFEBEE; -fx-border-color: #ef9a9a; -fx-border-radius: 4;" />
                                </children>
                            </VBox>
                            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label text="Total Fine (Rs)" textFill="#d32f2f"><font><Font name="System Bold" size="11.0" /></font></Label>
                                    <TextField fx:id="txtFine" editable="false" text="0.00" style="-fx-background-color: #FFEBEE; -fx-border-color: #ef9a9a; -fx-border-radius: 4;" />
                                </children>
                            </VBox>
                        </HBox>

                        <Button mnemonicParsing="false" onAction="#btnReturnBook" prefHeight="45.0" maxWidth="Infinity" style="-fx-background-color: #2E7D32; -fx-cursor: hand;" text="CONFIRM RETURN" textFill="WHITE">
                            <font><Font name="System Bold" size="13.0" /></font>
                            <VBox.margin><Insets top="20.0" /></VBox.margin>
                        </Button>
                    </children>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tblReturns" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: white;">
                            <columns>
                                <TableColumn prefWidth="75.0" text="Rent ID" />
                                <TableColumn prefWidth="100.0" text="Book ID" />
                                <TableColumn prefWidth="100.0" text="Return Date" />
                                <TableColumn prefWidth="100.0" text="Late Days" />
                                <TableColumn prefWidth="100.0" text="Fine Paid" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </children>
                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                    <effect><DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" /></effect>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>