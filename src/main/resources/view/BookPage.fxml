<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookPageController">
    <children>

        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="60.0" prefWidth="960.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 5;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
            <Button mnemonicParsing="false" onAction="#btnBackOnAction" style="-fx-background-color: #8D6E63; -fx-text-fill: white; -fx-cursor: hand;" text="&lt; Back">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>

                <Label text="Book Management" textFill="#3e2723">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <HBox HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label text="Search:" textFill="#8d6e63" />
                        <TextField promptText="Book ID or Title..." style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 5 15;">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </TextField>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <effect>
                <DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" />
            </effect>
        </HBox>

        <HBox layoutX="20.0" layoutY="100.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
            <children>

                <VBox prefHeight="530.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <effect>
                        <DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" />
                    </effect>
                    <children>
                        <Label text="Book Details" textFill="#5d4037">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Book ID" textFill="#8d6e63">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtId" promptText="Ex: B001" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Title" textFill="#8d6e63">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtTitle" promptText="Enter Book Title" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Author" textFill="#8d6e63">
                                    <font>
                                        <Font name="System Bold" size="11.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtAuthor" promptText="Enter Author Name" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                            </children>
                        </VBox>

                        <HBox spacing="10.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Category" textFill="#8d6e63">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtCategory" promptText="Ex: Novel" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Price (Rs)" textFill="#8d6e63">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtPrice" promptText="0.00" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox spacing="10.0">
                            <children>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Quantity" textFill="#8d6e63">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtQnty" promptText="Qty" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                                    </children>
                                </VBox>
                                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Status" textFill="#8d6e63">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtStatus" promptText="Available" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <children>
                                <Button mnemonicParsing="false" onAction="#btnAddBook" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #5D4037; -fx-cursor: hand;" text="ADD" textFill="WHITE" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                    <effect>
                                        <DropShadow height="10.0" radius="4.5" width="0.0">
                                            <color>
                                                <Color opacity="0.2" />
                                            </color>
                                        </DropShadow>
                                    </effect>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#btnUpdate" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #795548; -fx-cursor: hand;" text="UPDATE" textFill="WHITE" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#btnDelete" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #D32F2F; -fx-cursor: hand;" text="DELETE" textFill="WHITE" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnClear" style="-fx-background-color: transparent; -fx-border-color: #8d6e63; -fx-border-radius: 4; -fx-cursor: hand;" text="CLEAR FORM" textFill="#8d6e63">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tblBooks" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: white;" stylesheets="@style.css" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="75.0" text="ID" />
                                <TableColumn fx:id="colTitle" prefWidth="150.0" text="Title" />
                                <TableColumn fx:id="colAuthor" prefWidth="100.0" text="Author" />
                                <TableColumn fx:id="colCategory" prefWidth="75.0" text="Category" />
                                <TableColumn fx:id="colPrice" prefWidth="75.0" text="Price" />
                                <TableColumn fx:id="colQty" prefWidth="60.0" text="Qty" />
                                <TableColumn fx:id="colStatus" prefWidth="75.0" text="Status" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <effect>
                        <DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" />
                    </effect>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
