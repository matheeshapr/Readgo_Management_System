<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RentPageController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="60.0" prefWidth="960.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 5;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>

                <Button mnemonicParsing="false" onAction="#btnBackOnAction" style="-fx-background-color: #8D6E63; -fx-text-fill: white; -fx-cursor: hand;" text="&lt; Back">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>

                <Label text="Issue Books (Rent)" textFill="#3e2723">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>

                <HBox HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label text="Search:" textFill="#8d6e63" />
                        <TextField promptText="Search Rent ID..." style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 5 15;" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <effect>
                <DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" />
            </effect>
        </HBox>

        <HBox layoutX="20.0" layoutY="100.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
            <children>

                <VBox prefHeight="530.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8;">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <effect>
                        <DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" />
                    </effect>
                    <children>
                        <Label text="Rent Details" textFill="#5d4037">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Rent ID" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <TextField fx:id="txtRentId" promptText="Ex-001" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Customer ID" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <TextField fx:id="txtCustId" promptText="Select Customer" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Book ID" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <TextField fx:id="txtBookId" promptText="Select Book" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8; -fx-border-radius: 4;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Issue Date" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <DatePicker fx:id="dpIssueDate" maxWidth="Infinity" promptText="Select Date" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8;" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Due Date" textFill="#8d6e63"><font><Font name="System Bold" size="11.0" /></font></Label>
                                <DatePicker fx:id="dpDueDate" maxWidth="Infinity" promptText="Select Return Date" style="-fx-background-color: #FAFAFA; -fx-border-color: #d7ccc8;" />
                            </children>
                        </VBox>

                        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                            <VBox.margin><Insets top="20.0" /></VBox.margin>
                            <children>
                                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnPlaceOrder" prefHeight="40.0" style="-fx-background-color: #5D4037; -fx-cursor: hand;" text="ISSUE BOOK" textFill="WHITE" HBox.hgrow="ALWAYS"><font><Font name="System Bold" size="12.0" /></font></Button>
                            </children>
                        </HBox>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnClearCustomer" style="-fx-background-color: transparent; -fx-border-color: #8d6e63; -fx-border-radius: 4; -fx-cursor: hand;" text="CLEAR FORM" textFill="#8d6e63">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Button>
                    </children>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tblRent" style="-fx-background-color: white; -fx-border-color: white;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colRentId" prefWidth="75.0" text="Rent ID" />
                                <TableColumn fx:id="colCustId" prefWidth="100.0" text="Customer" />
                                <TableColumn fx:id="colBookId" prefWidth="100.0" text="Book" />
                                <TableColumn fx:id="colIssueDate" prefWidth="100.0" text="Issue Date" />
                                <TableColumn fx:id="colDueDate" prefWidth="100.0" text="Due Date" />
                                <TableColumn fx:id="colStatus" prefWidth="75.0" text="Status" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </children>
                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                    <effect><DropShadow color="#00000010" height="10.0" radius="4.5" width="0.0" /></effect>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
