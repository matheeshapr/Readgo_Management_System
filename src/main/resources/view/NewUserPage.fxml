<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="450.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignupPageController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="15.0" prefWidth="300.0">
            <children>
                <Label text="Create Account" textFill="#3e2723">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>

                <TextField fx:id="txtUserId" promptText="User ID (Ex: U002)" style="-fx-border-color: #d7ccc8; -fx-border-radius: 5; -fx-padding: 8;" />
                <TextField fx:id="txtUsername" promptText="Username" style="-fx-border-color: #d7ccc8; -fx-border-radius: 5; -fx-padding: 8;" />
                <PasswordField fx:id="txtPassword" promptText="Password" style="-fx-border-color: #d7ccc8; -fx-border-radius: 5; -fx-padding: 8;" />

                <ComboBox fx:id="cmbRole" prefWidth="300.0" promptText="Select Role" style="-fx-background-color: white; -fx-border-color: #d7ccc8;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Library Assistant" />
                            <String fx:value="Library Technician" />
                            <String fx:value="Cataloger" />
                            <String fx:value="Manager" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button onAction="#btnRegisterOnAction" prefWidth="300.0" style="-fx-background-color: #5D4037; -fx-text-fill: white; -fx-cursor: hand;" text="REGISTER">
                    <font><Font name="System Bold" size="14.0" /></font>
                    <VBox.margin><Insets top="10.0" /></VBox.margin>
                </Button>

                <Button onAction="#btnLoginOnAction" style="-fx-background-color: transparent; -fx-text-fill: #5D4037; -fx-cursor: hand; -fx-underline: true;" text="Already have an account? Login" />
            </children>
        </VBox>
    </children>
</AnchorPane>